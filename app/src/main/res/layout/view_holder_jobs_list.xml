<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                >
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Teach English"
                    android:textSize="25dp"
                    android:layout_marginLeft="@dimen/fab_margin"
                    />
                <TextView
                    android:id="@+id/tvPostedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="posted Date: "
                    android:layout_below="@id/tvTitle"
                    android:layout_alignLeft="@id/tvTitle"
                    android:layout_marginBottom="@dimen/fab_margin"
                    />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_light"
                >

                <TextView
                    android:id="@+id/tvShortDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:text="To teach English Speaking"
                    android:textColor="@color/primary_text"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvShortDescription"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_location_on_black_24dp" />

                <TextView
                    android:id="@+id/tvPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/ivLocation"
                    android:layout_below="@id/tvShortDescription"
                    android:layout_toEndOf="@id/ivLocation"
                    android:text="North Okkalapa"
                    android:textColor="@color/primary_text"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/ivMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ivLocation"
                    android:layout_below="@id/tvPlace"
                    android:src="@drawable/ic_attach_money_black_48dp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tvPlace"
                    android:layout_alignTop="@id/ivMoney"
                    android:layout_below="@id/tvPlace"
                    android:text="3000"
                    android:textColor="@color/primary_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/ivMoney"
                    android:layout_below="@id/tvPlace"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@id/tvAmount"
                    android:text="per month"
                    android:textColor="@color/primary_text" />


            </RelativeLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

</FrameLayout>








